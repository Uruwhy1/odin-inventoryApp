<link rel="stylesheet" href="/components/forms/form.css">
<script src="/components/forms/form.js"></script>

<form id="addForm" action="/categories/new" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input
      type="text"
      id="image_url"
      name="image_url"
    />
  </div>
  <label id="message" style="display: none;"></label>
  <button type="submit">Create Category</button>
</form>
<a class="back" href="/categories">Back to Categories</a>
