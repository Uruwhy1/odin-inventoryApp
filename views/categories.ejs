<link rel="stylesheet" href="/categories/categories-card.css" />
<link rel="stylesheet" href="/categories/categories.css" />

<script src="/categories/categories.js" defer></script>

<div class="container-header">
  <input class="search" id="searchCategories" placeholder="Search Categories" />
  <a class="add-new" href="/categories/new">Add New Category</a>
</div>

<ul>
  <% categories.forEach(category => { %>
  <li>
    <a class="edit tag-link" href="/categories/<%= category.id %>/edit">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="feather feather-edit"
      >
        <path
          d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
        ></path>
        <path
          d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
        ></path>
      </svg>
    </a>
    <form
      action="/categories/<%= category.id %>/delete"
      method="POST"
      style="display: inline"
      id="deleteForm"
    >
      <button class="remove tag-link" type="submit">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-trash-2"
        >
          <polyline points="3 6 5 6 21 6"></polyline>
          <path
            d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
          ></path>
          <line x1="10" y1="11" x2="10" y2="17"></line>
          <line x1="14" y1="11" x2="14" y2="17"></line>
        </svg>
      </button>
    </form>
    <a class="book-link" href="/categories/<%= category.id %>">
      <div
        class="image"
        style="
          background-image: url('<%= category.image_url || `/assets/images/book.png`%>');
        "
      ></div>
      <div class="info">
        <strong class="title"><%= category.name %></strong>
      </div>
    </a>
  </li>
  <% }) %>
</ul>
