<link rel="stylesheet" href="/books/books.css" />
<link rel="stylesheet" href="/books/book-card.css" />

<script src="/books/books.js" defer></script>

<h1>All Books</h1>
<div class="container-header">
  <input class="search" id="searchBooks" placeholder="Search Books" />
  <a class="add-new" href="/books/new">Add New Book</a>
</div>
<ul>
  <% books.forEach(book => { %>
  <a href="/books/<%= book.id %>">
    <li>
      <div
        class="image"
        style="
          background-image: url('<%= book.image_url || `/assets/images/book.png`%>');
        "
      >
        <form
          action="/books/<%= book.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button class="remove" type="submit">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-trash-2"
            >
              <polyline points="3 6 5 6 21 6"></polyline>
              <path
                d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
              ></path>
              <line x1="10" y1="11" x2="10" y2="17"></line>
              <line x1="14" y1="11" x2="14" y2="17"></line>
            </svg>
          </button>
        </form>
      </div>
      <div class="info">
        <div>
          <strong class="title"><%= book.title %></strong>
          <p class="author"><%= book.author_name %></p>
        </div>
      </div>
    </li>
  </a>
  <% }) %>
</ul>
