<h1>Edit Book</h1>
<form action="/books/<%= book.id %>/edit" method="POST">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= book.title %>"
      required
    />
  </div>
  <div>
    <label for="description">Description:</label>
    <textarea id="description" name="description" required><%= book.description %></textarea>
  </div>
  <div>
    <label for="author_name">Author:</label>
    <select id="author_name" name="author_name" required>
      <% authors.forEach(author => { %>
        <option value="<%= author.name %>" <%= book.author_name === author.name ? 'selected' : '' %>><%= author.name %></option>            <% }) %>
    </select>
  </div>
  <div>
    <label for="category_name">Category:</label>
    <select id="category_name" name="category_name" required>
      <% categories.forEach(category => { %>
        <option value="<%= category.name %>" <%= book.category_name === category.name ? 'selected' : '' %>><%= category.name %></option>            <% }) %>
    </select>
  </div>
  <button type="submit">Update Book</button>
</form>
<a href="/books">Back to Books</a>
