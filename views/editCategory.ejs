<main>
  <h1>Edit Category</h1>
  <form action="/categories/<%= category.id %>/edit" method="POST">
    <div>
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= category.name %>"
        required
      />
    </div>
    <button type="submit">Update Category</button>
  </form>
  <a href="/categories">Back to Categories</a>
</main>
