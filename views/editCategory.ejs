<link rel="stylesheet" href="/components/forms/form.css">
<script src="/components/forms/form.js"></script>

<form id="updateForm" action="/categories/<%= category.id %>/edit" method="POST">
  <div>
    <label for="name">Name:</label>
    <input
      type="text"
      id="name"
      name="name"
      value="<%= category.name %>"
      required
    />
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input
      type="text"
      id="image_url"
      name="image_url"
      value="<%= category ? category.image_url : '' %>"
    />
  </div>
  <label id="message" style="display: none;"></label>
  <button type="submit">Update Category</button>
</form>
<a class="back" href="/categories">Back to Categories</a>
